<div class="container">
    <partial name="_StatusMessage" for="StatusMessage" />
</div>

<div class="container about bg-success w-100 mb-2 bg-opacity-10 p-5 rounded-5">
    <div class="row d-flex align-content-center">
        <div class="col-md-4">
            <div class="">
                <img src="~/Assets/Image/forgetpassword.png" class="w-100" alt="">
            </div>
        </div>
        <div class="col-md-6">
            <div class="my-5">
                <form method="post">
                    <h3>Reset Your Password</h3>
                    <div class="form-floating my-5">
                        <input type="email" asp-for="Input.Email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <button type="submit" class="btn btn-outline-dark">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
