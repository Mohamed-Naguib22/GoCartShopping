@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutResource.cshtml";
}

<section class="signForm">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 col-left">
                <div class="leftSideSignIn ">
                    <div class="signUpImg d-flex  justify-content-center  mt-5">
                        <img src="~/Assets/Image/sign.png" class="w-50 " alt="img">
                    </div>
                    <h1 class="text-center siteNameSign ">Go Cart</h1>
                    <h1 class="text-center fs-4 mt-3 text-white">Welcome to Go Cart. We are happy to have you with us</h1>
                </div>
            </div>
            <div class="col-md-4 col-right">
                <div class="rightSideSignTn ">
                    <h3 class="text-center mt-5 font-monospace">Hello! Welcome back</h3>
                    <form method="post" action="">
                        <div class="col-12 px-5">
                            <div class="position-relative">
                                <i class="fa-solid fa-user i-pos1"></i>
                                <input asp-for="Input.Email" type="email" id="logEmail" class="ms-2 mt-3 form-control ps-4 " placeholder="Email">
                                <p class="alert alertEmail2 alert-danger w-100 d-none  mt-2">@Html.ValidationMessageFor(model => model.Input.Email)</p>
                            </div>
                            <div class="position-relative">
                                <i class="fa-solid fa-lock i-pos2 " id="iconLog1"></i>
                                <input asp-for="Input.Password" type="password" id="logPassWord" class=" ms-2 mt-3 ps-4 form-control" placeholder="Password">
                                <i class="fa-regular fa-eye i-pos3" style="cursor:pointer;" id="show"></i>
                                <p class="forPass ms-3">
                                    <a asp-page ="./ForgotPassword" class="text-dark text-decoration-none">Forgot your password?</a>
                                </p>
                                <p class="alert alertPass2  alert-danger w-100 d-none  mt-2">
                                    The password should be at least 6 characters long 
                                    and contain at least one digit, one uppercase letter, 
                                    one lowercase letter, and one special character.</p>
                                <!-- <p class="pass-text text-danger">Password must be at least 8 characters long.<i class="fa-solid fa-exclamation "></i></p>  -->
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>

@*                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>*@

                            <div class=" d-flex justify-content-center mt-4 ">
                                <button type="submit" id="btnSignIn" disabled class="btn-dark btn text-white mb-3 px-5 py-3">Log In</button>
                            </div>
                            <p class="text-center  mb-1 fw-bold ">Have an account?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark text-decoration-none"> Sign up</a> 
                            </p>
                            <hr>
                            <div class="btTn-Group col-12 ">
                                <button class="btTn1 f-color"><i class="fa-brands fa-facebook-f "></i></button>
                                <button class="btTn1 g-color"><i class="fa-brands fa-google"></i></button>
                                <button class="btTn1 t-color"><i class="fa-brands fa-twitter"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

