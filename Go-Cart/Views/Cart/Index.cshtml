@model Cart
@{
    ViewData["Title"] = "Cart";
}
<section class="cart mx-2 ">
    <div class="container">
        <h2 class="mt-4">Your Cart</h2>

        <hr />

        <div class="mt-4 bg-white">
            @if (!Model.Products.Any())
            {
                <div class="toast ms-2 d-block" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header  bg-black">
                        <img src="../55.ico" class="rounded me-2 w-25" alt="...">
                        <strong class="me-auto">My cart</strong>
                        <small class="text-muted text-white">11 mins ago</small>
                        <button type="button" class="btn-close btn-close-white border border-white" data-bs-dismiss="toast" aria-label="Close"></button>
                        <!-- <button type="button" class="btn-danger btn-close" aria-label="Close"></button> -->

                    </div>
                    <div class="toast-body">
                        Hello,There are no selected products to display!
                    </div>
                </div>
            }
            else
            {
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <img src="@item.ImgUrl" alt="@item.Name" class="mr-2" width="50" height="50">
                                        <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                            <input type="hidden" name="productId" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger">Remove</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <div class="mt-4">Total Price: @Model.TotalPrice</div>
        <h4 class="mt-4"><a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a></h4>
        <h4 class="mt-4"><a asp-route-totalCost="@Model.TotalPrice" asp-controller="Order" asp-action="PlaceOrder" class="btn btn-primary">Checkout</a></h4>
    </div>
</section>
