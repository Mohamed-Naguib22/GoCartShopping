@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["DuplicateProduct"] != null && (bool)TempData["DuplicateProduct"])
{
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            Product is already added to the cart.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

<!-- start landing -->
<header id="Home" class=" ">
    <div class=" px-5 head  headerLayover">

        <div class="headCaption w-100  ">
            <h1 class="fs-2 fw-bolder  ">Welcome To Go Cart</h1>
            <p class="fs-3 n">

                Exclusive collection for everyone...We are  One of The best E-commerce sites in The Middle East
                .... Try it now
            </p>
            <div class="d-flex gap-2">
                <button class="btn2 fw-bold">
                    <a href="Html/Categories.html" class="text-decoration-none text-white">

                        Explore Now
                    </a>
                </button>
            </div>
        </div>
        <div class="headImg w-100   ">
            <img src="Assets/Image/logoo5.png" class="w-100 img" alt="">
        </div>
    </div>
    <button class="btn rounded-3" id="btnUp">
        <i class="fas fa-arrow-up btnUp"></i>
    </button>
</header>

<section class="sec2 mt-5" id="sec2">
    <div class="container">
        <div class="d-flex justify-content-between row ">
            <div class="col-md-3">
                <div class="category">
                    <div class="category1">
                        <a href="">
                            <h3 class="pt-3 ms-3">All Category</h3>
                        </a>
                        <hr class="text-info">
                        <a asp-controller="Category" asp-action="NewArrivals">
                            <p class="ms-3 w-75">New Arrivals</p>
                        </a>

                        @foreach (var category in Model.Categories.Where(c => c.ParentCategoryId == null))
                        {
                            @if (category.Id == 1)
                            {
                                <hr class="text-info">
                                <div class="dropdown ms-3 w-25">
                                    <a class=" dropdown-toggle dropdown-toggle1 " href="" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                        Fashion
                                    </a>

                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        @foreach (var fashionCategory in Model.Categories.Where(c => c.ParentCategoryId == 1))
                                        {
                                            <li>
                                                <a asp-route-categoryId="@fashionCategory.Id" asp-controller="Category" asp-action="Index" class="dropdown-item">@fashionCategory.Name</a>
                                            </li>

                                        }
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <hr class="text-info">
                                <a asp-route-categoryId="@category.Id" asp-controller="Category" asp-action="Index">
                                    <p class=" @(category == Model.Categories.Last() ? "ms-3 pb-3 w-75" : "ms-3 w-75" )">@category.Name</p>
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-9 ">
                <div class="slide w-100">
                    <div class="slide-swp swiper mySwiper">
                        <div class="swiper-wrapper">
                            <div class="swiper-slide swiper-slide1">
                                <img src="Assets/Image/slider-01.jpg" class="w-100" alt="">
                            </div>
                            <div class="swiper-slide swiper-slide2">
                                <img src="Assets/Image/slider-02.jpg" class="w-100" alt="">
                            </div>
                            <div class="swiper-slide swiper-slide3">
                                <img src="Assets/Image/slider-03.jpg" class="w-100" alt="">
                            </div>
                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container d-flex gap-2 my-5">
    <div class="position-relative">
        <img src="Assets/Image/advertisement/banner-5.jpg" class="w-100" alt="">
        <span class="glass-hover"></span>
    </div>

    <div class="position-relative">
        <img src="Assets/Image/advertisement/banner-2.jpg" class="w-100" alt="">
        <span class="glass-hover"></span>
    </div>

    <div class="position-relative">
        <img src="Assets/Image/advertisement/banner-1.jpg" class="w-100" alt="">
        <span class="glass-hover"></span>
    </div>
</div>

<section class="slider my-5" style="background-color:#F0F2F5">
    <div class="container">
        <div class="slickSlider slickSlider1" >
            @foreach (var category in Model.Categories.Where(c => c.ParentCategoryId != 1))
            {
                <div class="item rounded-circle" style="background-color:#fff">
                    <img src="@category.ImgUrl" class="rounded-circle" alt="">
                    <a asp-route-categoryId="@category.Id" asp-controller="Category" asp-action="Index" class="layer1 rounded-circle text-decoration-none">
                        <div class="layCard lay-icon d-flex flex-column">
                            <h4 class="text-white">@category.Name</h4>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<section class="sale-sec container swiper mySwiper">
    <div class="section-head">
        <h4>
            <span class="section-onsale">
                On Sale
            </span>
            Products
        </h4>
    </div>
    <div class="boxs swiper-wrapper">
        @foreach (var product in Model.Products.Where(p => p.OnSale == true))
        {
            <div class="box column product-item swiper-slide">
                <div class="product-btn">
                    <ul class="product-action">
                        <li class="addToWL" data-product-id="@product.Id"><i class="far fa-heart"></i></li>
                        <li><a asp-route-productId="@product.Id" asp-controller="Cart" asp-action="AddToCart"><i class="fa-solid fa-cart-shopping"></i></a></li>
                    </ul>
                </div>
                <a asp-route-productId="@product.Id" asp-controller="Product" asp-action="Details" class="div-img">
                    <span class="discount bg-danger ">@((int)(product.Offer.DiscountPercentage * 100))%</span>
                    <img src="@product.ImgUrl" class="img-product">
                    <img src="@product.ImgUrl" class="hover-img">
                </a>
                <div class="content">
                    <a class="product-item-link">
                        @product.Name
                    </a>
                    @{
                        var ratings = _context.Ratings.
                            Where(r => r.ProductId == product.Id).ToList();
                        
                            decimal rating = ratings.Count > 0 ? ratings.Average(r => r.Value) : 5;
                    }

                    <div class="stars">
                        @for (int i = 0; i < (int)Math.Round(rating); i++)
                        {
                            <i class="fa-solid fa-star"></i>
                        }
                        @for (int i = (int)Math.Round(rating); i < 5; i++)
                        {
                            <i class="fas fa-star" style="color:darkgray"></i>
                        }
                    </div>
                    <div class="price">
                        <span>$@(product.Price - Math.Round(product.Price * product.Offer.DiscountPercentage))</span>
                        <del>$@product.Price</del>
                    </div>
                </div>
            </div>

        }
    </div>

    <div class="">
        <div class="swiper-button-next swiper-btn"></div>
        <div class="swiper-button-prev swiper-btn"></div>
    </div>
</section>


<section class="sale-sec container swiper mySwiper">
    <div class="section-head">
        <h4>
            <span class="section-onsale">
                New
            </span>
