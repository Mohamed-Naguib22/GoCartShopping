                @foreach (var product in Model.Products.Where(p => p.Category.Name == category))
                {
                    <div class="col-md-6 col-lg-4 p-2 mix @category">
                        <div class="port">
                            <img class="w-100" src="@product.ImgUrl" alt="">
                            <div class="layer text-center text-white d-flex align-items-center justify-content-center">
                                <div class="lay-text">
                                    <h4 class="text-black">@product.Name</h4>
                                    <div class="lay-icon">
                                    <a asp-route-productId="@product.Id" asp-controller="Cart" asp-action="AddToCart">
                                        <i class="fa-solid fa-cart-shopping"></i>
                                    </a>

                                    <a asp-route-productId="@product.Id" asp-controller="Product" asp-action="Details">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>