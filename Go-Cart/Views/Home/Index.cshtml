    <div class=" pt-5">
        <h2 class="work-after text-center fs-1">Fashion</h2>
    </div>
    <ul class="list-unstyled mb-3 py-5">
        <li class="d-flex gap-2  justify-content-center align-items-center">
            <button class="btn1 btn-color rounded-5 mixitup-control-active" data-filter="all">All</button>
            <button class="btn1 btn-color rounded-5" data-filter=".Men">Men</button>
            <button class="btn1 btn-color rounded-5" data-filter=".Women">Women</button>
