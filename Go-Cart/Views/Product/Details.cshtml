@model ProductDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}
@if (TempData["DuplicateProduct"] != null && (bool)TempData["DuplicateProduct"])
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        Product is already added to the cart.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<section class="details font-monospace">
    <div class="container">
        <h4 class="font-monospace ms-2">product </h4>
        <hr class="w-100">
        <div class="d-flex ms-5 align-items-center  details-dflex">
            <div class="det-img pe-5">
                <img src="@Model.ImgUrl" class="w-100 h-100" alt="">
            </div>

            <div class="det-text w-100">
                <div class="d-flex align-items-center">
                    <h2>Name: </h2>
                    <p class="mt-2 fs-3 ms-1"> @Model.Name</p>
                </div>

                <hr class="me-3">
                <div class="d-flex align-items-center">
                    <h2>Category: </h2>
                    <p class="mt-2 fs-3 ms-1"> @Model.Category</p>
                </div>

                <hr class="me-3">
                <div class="d-flex align-items-center">
                    <h2>Rating: </h2>
                    <div class="star-rating" id="product-rating"></div>
                </div>

                <hr class="me-3">
                <div class="d-flex align-items-center">
                    <h2>Available Sizes: </h2>
                    @foreach (var size in Model.AvailableSizes)
                    {
                        <p class="mt-2 fs-3 ms-1">
                            @(size == Model.AvailableSizes.Last() ? size : size + ", ")
                        </p>
                    }
                </div>

                <hr class="me-3">
                <div class="d-flex align-items-center">
                    <h2>price: </h2>
                    <p class="mt-3 fs-3 ms-1 text-success">@Model.Price$</p>
                </div>

                <hr class="me-3">
                <div class=" align-items-center">
                    <h2 class="font-monospace">Description : </h2>
                    <p class="mt-2 fs-3 ms-1">Lorem ipsum dolor sit amet consectetur adipisicing elit. Excepturi rem voluptate corporis eos vitae, soluta possimus praesentium ad laudantium? Molestias.</p>
                </div>
                <hr class="me-3">
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <a asp-route-productId="@Model.Id" asp-controller="Cart" asp-action="AddToCart" class="btn detailsBtn px-5 py-3">Add To Cart</a>
        </div>
    </div>
</section>

<section class="my-5">
    <form method="post" asp-action="AddReview" asp-route-productId="@Model.Id" class="w-75 mx-auto">
    <input name="review" maxlength="200" id="coment" class="form-control w-75 mx-auto text-dark py-3" placeholder="Write a customer review" />
        <button type="submit" class="btn btn-primary mt-2" style="display:none"></button>
    </form>
    <div class="comment mx-auto w-75 mt-5">
        @foreach (var review in Model.ProductReviews)
        {
            <div class="">
                <div class="comImg d-flex ">
                    <img src="@review.ProfilePicture" alt="User Image" class=" border rounded-circle">
                    <p class="mt-2 ms-2 font-monospace">@review.UserName</p>
                </div>
                <div class="comText ms-4">
                    <p class="">
                        @review.Review
                    </p>
                </div>
            </div>
            <hr/>
        }
    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var productRating = @Model.Rating;

        var filledStars = Math.floor(productRating);
        var emptyStars = 5 - filledStars;

        var filledStarsHTML = '';
        for (var i = 0; i < filledStars; i++) {
            filledStarsHTML += '<span class="star checked">&#9733;</span>';
        }

        var emptyStarsHTML = '';
        for (var i = 0; i < emptyStars; i++) {
            emptyStarsHTML += '<span class="star">&#9734;</span>';
        }

        $('#product-rating').html(filledStarsHTML + emptyStarsHTML);
    });
</script>